<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkout_card_view"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:elevation="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/user_photo"
            android:layout_marginRight="8dp"
            android:src="@mipmap/on_loan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Device ID here"
            android:id="@+id/devicename"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_photo"
            android:layout_alignRight="@+id/checkout_date"/>
        <TextView
            android:id="@+id/checkout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="checkout info here"
            android:layout_toRightOf="@+id/user_photo"
            android:layout_alignBottom="@id/user_photo"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>

