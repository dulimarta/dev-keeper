<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dev_icon"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/device_image"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Device name here"
            android:id="@+id/devicename"
            android:layout_alignTop="@id/dev_icon"
            android:layout_toRightOf="@id/dev_icon"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="device id here"
            android:id="@+id/dev_id"
            android:layout_alignLeft="@id/devicename"
            android:layout_below="@+id/devicename"/>

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="Large Text"
            android:id="@+id/dev_status_icon"
            android:src="@mipmap/on_loan"
            android:scaleType="centerCrop"
            android:cropToPadding="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/dev_status_text"
            android:layout_below="@id/dev_id"
            android:layout_alignLeft="@+id/dev_id"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
